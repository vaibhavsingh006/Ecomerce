<%- include('./partials/header') %>
    <% if(error.length>0){ %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= error %>
            </span>
        </div>
        <% } %>
            <div class="w-full h-screen flex px-20 justify-center bg-gradient-to-r from-[#eeaeca] to-[#94bbe9]">
                <div class="w-1/2 flex items-center justify-center h-screen">
                    <div class="w-full px-32">
                        <h4 class=" capitalize mb-5 font-bold text-2xl mb-6 text-blue-700">Admin Access</h4>
                        <form action="/owner/login" method="post">
                            <input
                                class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="email" placeholder="Email" name="email">
                            <input
                                class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="password" placeholder="Password" name="password">
                            <input class="px-5 rounded-full py-3 mt-2 bg-blue-700 text-white font-semibold"
                                type="submit" value="Admin Login">
                            <a href="/" class="mt-4 text-center block font-sm">Not a admin_?, <span
                                    class="text-blue-500 font-semibold">SignUp</span></a>
                        </form>
                    </div>
                </div>
            </div>
            <%- include('./partials/footer') %>